extends _pug-includes/layout.pug

block vars
    - var active = 'contact'  
    - var navbarClass = ''  
    - var headerClass = ''  


block content
       
    - var breadcrumbs = []
    - breadcrumbs.push({name: 'Home', link: 'index.html'})
    - breadcrumbs.push({name: 'Frequently asked questions'})
    - var heroHeading = 'F.A.Q.s'
    - var heroHeadingClass = 'hero-heading'
    - var heroText ='<p class="text-muted">As am hastily invited settled at limited civilly fortune me. Really spring in extent an by. Judge but built party world. Of so am he remember although required. Bachelor unpacked be advanced at. Confined in declared marianne is vicinity. </p>'    
    
    include _pug-includes/inc-hero.pug

    // FAQ
    section.py-6
        .container
            
            - faq = []
            - faq.push({name: 'Shopping', questionsLeft: ['What shipping method does Sell use?', 'What countries do you to?'], questionsRight: ['One of my items is missing', 'Remote areas - delivery']})
            - faq.push({name: 'Payment', questionsLeft: ['Can I pay COD - cash on delivery?', 'Payment methods accepted'], questionsRight: ['What is Paypal?', 'How do the conversion rates work']})
            - faq.push({name: 'Warranty and return', questionsLeft: ['My product has a problem what should I do?', 'What if the product is broken?'], questionsRight: ['Why should I buy insurance at the checkout?']})

            - var mainIterator = 1

            each val, faqIndex in faq
                .py-4
                    h2.mb-5.text-primary #{val.name}
                    .row
                        .col-md-6
                            each item, index in val.questionsLeft
                                h5 #{item}

                                - mainIterator++
                                - var dummyTextIterator = mainIterator % dummyTextLength
                                - var dummyTextItem = dummyText[dummyTextIterator]
                                p.text-muted.mb-4 #{dummyTextItem}

                        .col-md-6
                            each item, index in val.questionsRight
                                h5 #{item}
                                - mainIterator++
                                - var dummyTextIterator = mainIterator % dummyTextLength
                                - var dummyTextItem = dummyText[dummyTextIterator]
                                p.text-muted.mb-4 #{dummyTextItem}
                if (faqIndex != faq.length - 1)
                    hr

               


