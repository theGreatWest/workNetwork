.row
    .col-lg-6.text-center.mb-5
        p.text-muted Light-themed Bootstrap Select
        select.selectpicker.mb-3(name="sort", id="form_sort", data-style="btn-selectpicker", title="")
            - var sortBy = ['Most popular', 'Recommended', 'Newest', 'Oldest', 'Closest']
            each val, index in sortBy
                option(value=`sortBy_${index}`) #{val}   
        
        code.d-block select.selectpicker(data-style="btn-selectpicker")
