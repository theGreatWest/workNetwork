extends _pug-includes/layout.pug


block vars
    - var loggedUser = true

block content
       
    - var breadcrumbs = []
    - breadcrumbs.push({name: 'Home', link: 'index.html'})
    - breadcrumbs.push({name: 'Add new listing'})
    - var heroHeading = 'Add new listing'
    - var heroHeadingClass = 'hero-heading mb-5'
    
    //- include _pug-includes/inc-hero
    
    +progress(20)

    section.py-5
        .container

            +stepsHeading('Basic information', 1)

            form
                .row.form-block
                    .col-lg-4
                        h4 Basic
                        p.text-muted.text-sm #{dummyText[2]}
                    .col-lg-7.ms-auto
                        .mb-4
                            label.form-label(for="form_name") Property name
                            input.form-control(name="name", id="form_name")

                        .mb-4
                            - var types = ['Entire place', 'Private room', 'Shared room']
                            label.form-label(for="form_type") Home type
                            select.selectpicker.form-control(name="type", id="form_type", data-style="btn-selectpicker", title="", aria-describedby="propertyTypeHelp")
                                each val, index in types
                                    option(value=`type_${index}`) #{val}                         
                            small#propertyTypeHelp.form-text.text-muted #{dummyText[5]}

                        .mb-4
                            - var choices = ['Yes, it\'s primarily set up for guests', 'No, I keep my personal belongings there']
                            label.form-label Is your property set as a dedicated guest space?
                            each val,index in choices
                                .form-check
                                    input.form-check-input(type='radio', id=`guests_${index}`, name="guests")
                                    label.form-check-label(for=`guests_${index}`) #{val}

                .row.form-block
                    .col-lg-4
                        h4 Location
                        p.text-muted.text-sm #{dummyText[3]}
                    .col-lg-7.ms-auto
                        // Country
