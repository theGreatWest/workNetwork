// Footer
footer.position-relative.z-index-10.d-print-none
                   
    // Main block - menus, subscribe form
    .py-6.bg-gray-200.text-muted 
        .container
            .row
                .col-lg-4.mb-5.mb-lg-0
                    .fw-bold.text-uppercase.text-dark.mb-3 Directory

                    p Lorem ipsum dolor sit amet, consectetur adipisicing.
                    
                    ul.list-inline
                        - social = ['twitter', 'facebook', 'instagram', 'pinterest', 'vimeo']
                        each val in social
                            li.list-inline-item
                                a.text-muted.text-primary-hover(href="#", target="_blank", title=val)
                                    i(class=`fab fa-${val}`)

                .col-lg-2.col-md-6.mb-5.mb-lg-0
                    h6.text-uppercase.text-dark.mb-3 Rentals
                    ul.list-unstyled
                        - links = {'index.html': 'Rooms', 'category-rooms.html': 'Map on top', 'category-2-rooms.html': 'Side map', 'category-3-rooms.html': 'No map', 'detail-rooms.html' : 'Room detail'}
                        each name, link in links
                            li
                                a.text-muted(href=`${path}${link}`) !{name}

                .col-lg-2.col-md-6.mb-5.mb-lg-0
                    h6.text-uppercase.text-dark.mb-3 Pages
                    ul.list-unstyled
                        each name, link in pagesLinks
                            li
                                a.text-muted(href=`${path}${link}`) !{name}                                   
                

                .col-lg-4
                    h6.text-uppercase.text-dark.mb-3 Daily Offers & Discounts
                    p.mb-3  Lorem ipsum dolor sit amet, consectetur adipisicing elit. At itaque temporibus.
                    
                    form(action="#", id="newsletter-form")
                        .input-group.mb-3
                            input.form-control.bg-transparent.border-dark.border-end-0(type='email', placeholder="Your Email Address", aria-label="Your Email Address")
                            button.btn.btn-outline-dark.border-start-0(type='submit') 
                                i.fa.fa-paper-plane.text-lg


    // Copyright section of the footer

    .py-4.fw-light.bg-gray-800.text-gray-300
        .container
            .row.align-items-center
                .col-md-6.text-center.text-md-start
                    p.text-sm.mb-md-0 &copy; 2021, Your company.  All rights reserved.
                
                .col-md-6
                    ul.list-inline.mb-0.mt-2.mt-md-0.text-center.text-md-end
                        li.list-inline-item
                            img.w-2rem(src=`${path}img/visa.svg`, alt="...")
                        li.list-inline-item
                            img.w-2rem(src=`${path}img/mastercard.svg`, alt="...")
                        li.list-inline-item
                            img.w-2rem(src=`${path}img/paypal.svg`, alt="...")
                        li.list-inline-item
                            img.w-2rem(src=`${path}img/western-union.svg`, alt="...")
                    
