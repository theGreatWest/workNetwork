extends _pug-includes/layout.pug

block vars 
    - var breadcrumbs = []
    - breadcrumbs.push({name: 'Home', link: 'index.html'})
    - breadcrumbs.push({name: 'Your trips', link: 'user-grid.html'})
    - breadcrumbs.push({name: 'Trip to London'})
    - var heroClass = 'py-5 text-start bg-whsite'
    - var heroHeading = 'Modern Apt - Vibrant Neighborhood'
    - var heroHeadingClass = 'hero-heading mb-3'
    - var breadcrumbClass = 'ps-0  justify-content-start'
    - var mapUsed = true
    - var loggedUser = true


block content
       
    .container-fluid                

        .row
            .col-lg-7.col-xl-5.px-4.pb-4.ps-xl-5.pe-xl-5

                - gallery = []
                - gallery.push({title: 'Our street',small: 'img/photo/photo-1426122402199-be02db90eb90.jpg', big:  'img/photo/photo-1426122402199-be02db90eb90.jpg'})
                - gallery.push({title: 'Outside', small: 'img/photo/photo-1512917774080-9991f1c4c750.jpg', big:  'img/photo/photo-1512917774080-9991f1c4c750.jpg'})
                - gallery.push({title: 'Rear entrance',small: 'img/photo/photo-1494526585095-c41746248156.jpg', big:  'img/photo/photo-1494526585095-c41746248156.jpg'})
                - gallery.push({title: 'Kitchen',small: 'img/photo/photo-1484154218962-a197022b5858.jpg', big: 'img/photo/photo-1484154218962-a197022b5858.jpg'})
                - gallery.push({title: 'Bedroom',small: 'img/photo/photo-1522771739844-6a9f6d5f14af.jpg', big:  'img/photo/photo-1522771739844-6a9f6d5f14af.jpg'})
                - gallery.push({title: 'Bedroom',small: 'img/photo/photo-1488805990569-3c9e1d76d51c.jpg', big:  'img/photo/photo-1488805990569-3c9e1d76d51c.jpg'})
                section.mx-n4.mx-xl-n5.mb-4.mb-xl-5
                    // Slider main container
                    .swiper-container.booking-detail-slider
                        // Additional required wrapper
                        .swiper-wrapper
                            // Slides
                            each val, index in gallery
                                .swiper-slide
                                    img.img-fluid(src=val.big, alt=val.title)

                        .swiper-pagination.swiper-pagination-white
                        .swiper-button-prev.swiper-button-white
                        .swiper-button-next.swiper-button-white    

                // Breadcrumbs 
                ol(class=`breadcrumb ${breadcrumbClass}`)
                    each val in breadcrumbs
                        if (val.link)
                            li.breadcrumb-item
                                a(href=val.link) #{val.name}
                        else
                            li.breadcrumb-item.active #{val.name}   
                
                .text-block

                    p.subtitle Monday Apr 17 - Tuesday Apr 18
                    h1(class=heroHeadingClass) #{heroHeading}


                .text-block
                    h6.mb-4 1 night in London

                    .row.mb-3
                        .col-md-6.d-flex.align-items-center.mb-3.mb-md-0
                            .date-tile.me-3
                                .text-uppercase 
                                    span.text-sm Apr
                                    br
                                    strong.text-lg 17
                            p.text-sm.mb-0 Wednesday check-in<br>3PM - 7PM
                        .col-md-6.d-flex.align-items-center
                            .date-tile.me-3
                                .text-uppercase 
                                    span.text-sm Apr
                                    br
                                    strong.text-lg 18
                            p.text-sm.mb-0 Thursday check-out<br>11AM

                .text-block
                    .row
                        .col-sm
                            h6 Address
                            p.text-muted Ap #867, 859 Sit Rd., London
                        .col-sm
                            h6 Phone
                            p.text-muted +421 454 897 545

                .text-block
                    .d-flex.align-items-center.justify-content-between.mb-3
                        div
                            h6 Entire appartment
                            p.text-muted.mb-0 Hosted by <a href="user-profile.html" class="text-reset">Jack London</a>
                        a(href="user-profile.html")
                            img.avatar.avatar-lg.p-1.flex-shrink-0.ms-4(src=`${path}img/avatar/avatar-10.jpg`, alt='Jack London')
                
                .text-block

                    - var people = ['Ondrej', 'Julie', 'Barbora']

                    h6.mb-3 Who's coming
                    .row.mb-3
                        each val, index in people
                            .col-auto.text-center.text-sm
                                img.avatar.avatar-border-white.mb-1(src=`${path}img/avatar/avatar-${index}.jpg`, alt=val)
                                br
                                | #{val}

                .text-block
                    .row
                        .col
                            h6  Total cost
                            p.text-muted $499.50
                    
                        .col.align-self-center
                            p.text-end.d-print-none
                                a.btn.btn-link.text-muted(href="user-invoice.html")
                                    i.far.fa-file.me-2
                                    | Your invoice

                .text-block

                    h6.mb-4 Things to keep in mind

                    - equipment = []
                    - equipment.push({name: 'Not suitable for children and infants - The entrance staircase doesn\'t have handrails', icon: 'fas fa-child'})
                    - equipment.push({name: 'No parties or events', icon: 'fas fa-glass-cheers'})
                    - equipment.push({name: 'No smoking', icon: 'fa-smoking-ban'})
                    - equipment.push({name: 'No pets', icon: 'fa-cat'})

                    ul.list-unstyled
                        each val, index in equipment
                            if (index < 4)
                                li.mb-2 
                                    .d-flex.align-items-center.mb-3
                                        .icon-rounded.icon-rounded-sm.bg-secondary-light.flex-shrink-0.me-4
                                            i.fa(class=`${val.icon} text-secondary fa-fw text-center`)
                                        div
                                            span.text-sm #{val.name}
                    #moreRules.collapse
                        ul.list-unstyled
                            each val, index in equipment
                                if (index < 4)
                                    li.mb-2 
                                        .d-flex.align-items-center.mb-3
                                            .icon-rounded.icon-rounded-sm.bg-secondary-light.flex-shrink-0.me-4
                                                i.fa(class=`${val.icon} text-secondary fa-fw text-center`)
                                            div
                                                span.text-sm #{val.name}

                    +collapseButton('moreRules', 'Show more', 'Show less', 'text-muted')  



                .text-block.d-print-none
                    button.btn.btn-link.ps-0(onclick="window.print()")
                        i.fa.fa-print.me-2
                        | Print 

            .col-lg-5.col-xl-7.map-side-lg.px-lg-0
                #detailSideMap.map-full.shadow-left

block additionalScripts
    include _pug-includes/scripts-map.pug

    script(src='js/map-detail.js')                                
    script.
        createDetailMap({
            mapId: 'detailSideMap',
            mapZoom: 18,
            mapCenter: [40.732346, -74.0014247],
            markerShow: true,
            markerPosition: [40.732346, -74.0014247],
            markerPath: 'img/marker.svg',
        })
