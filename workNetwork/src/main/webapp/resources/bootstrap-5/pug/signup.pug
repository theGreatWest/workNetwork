extends _pug-includes/layout.pug

block vars 
    - var active = 'login'
    - var hideTopbar = true
    - var hideNavbar = true
    - var hideFooter = true

block content

    .container-fluid.px-3
        .row.min-vh-100
            .col-md-8.col-lg-6.col-xl-5.d-flex.align-items-center
                .w-100.py-5.px-md-5.px-xxl-6.position-relative
                    .mb-4
                        img.img-fluid.mb-4(src='img/logo-square.svg', alt='...', style='max-width: 4rem;')            
                        h2 Sign up
                        p.text-muted #{dummyText[2]}

                    form.form-validate
                        .mb-4
                            label.form-label(for='loginUsername')  Email Address
                            input.form-control(name="loginUsername", id="loginUsername", type='email', placeholder='name@address.com', autocomplete='off', required, data-msg="Please enter your email")
                        .mb-4
                            label.form-label(for='loginPassword')  Password
                            input.form-control(name="loginPassword",  id="loginPassword",  placeholder="Password", type='password', required, data-msg="Please enter your password")
                        .mb-4
                            label.form-label(for='loginPassword2')  Confirm your password
                            input.form-control(name="loginPassword2",  id="loginPassword2",  placeholder="Password", type='password', required, data-msg="Please enter your password")

                        .d-grid.gap-2
                            button.btn.btn-lg.btn-primary(type="submit")
                                | Sign up

                        hr.my-3.hr-text.letter-spacing-2(data-content="OR")
                        
                        .d-grid.gap-2
                            button.btn.btn.btn-outline-primary.btn-social
                                i.fa-2x.fa-facebook-f.fab.btn-social-icon 
                                | Connect <span class="d-none d-sm-inline">with Facebook</span>

                            button.btn.btn.btn-outline-muted.btn-social
                                i.fa-2x.fa-google.fab.btn-social-icon 
                                | Connect <span class="d-none d-sm-inline">with Google</span>

                        hr.my-4

                        p.text-sm.text-muted By signing up you agree to Directory's <a href="#">Terms and Conditions</a> and <a href="#">Privacy Policy</a>.

                    a(href="index.html").close-absolute.me-md-5.me-xl-6.pt-5 
                        +svgIcon('close-1', 'w-3rem h-3rem')
               
            .col-md-4.col-lg-6.col-xl-7.d-none.d-md-block
                // Image
                .bg-cover.h-100.me-n3(style='background-image: url(img/photo/photo-1497436072909-60f360e1d4b1.jpg);')

